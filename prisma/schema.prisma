// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Example model - customize based on your needs
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pokemon {
  id           Int      @id @default(autoincrement())
  userId       Int?     // 사용자 ID (nullable for backward compatibility)
  pokemonId    Int      // 포켓몬 고유번호
  thumbnailUrl String   @db.VarChar(500) // 썸네일 이미지 URL
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([pokemonId])
  @@index([userId])
}

model GameScore {
  id                Int      @id @default(autoincrement())
  userId            Int
  gameType          String   // "runner" (향후 확장: "puzzle", "battle")
  selectedPokemonId Int
  score             Int
  distance          Int
  obstaclesPassed   Int
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([userId, gameType])
  @@index([gameType, score])
}
